extends layout
block main-content
    form.form-horizontal( method='POST')
      fieldset
        legend.col-lg-offset-1 Login
        .form-group
          label.col-lg-2.control-label(for='username') Username
          .col-lg-4
            input#username.form-control(type='text', placeholder='Username' name='username')
        .form-group
          label.col-lg-2.control-label(for='inputPassword') Password
          .col-lg-4
            input#inputPassword.form-control(type='text', placeholder='Password' name='password')    
        .form-group
          .col-lg-10.col-lg-offset-2
            button.btn.btn-success(type='submit') Submit
